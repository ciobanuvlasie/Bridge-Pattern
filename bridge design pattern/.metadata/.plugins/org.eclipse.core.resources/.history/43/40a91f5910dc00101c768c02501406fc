import javax.swing.JPanel;
import java.awt.Graphics;

public class DrawingPanel extends JPanel {

    private Shape shape;

    public void setShape(Shape shape) {
        this.shape = shape;
        repaint();
    }

    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        if (shape != null) {
            shape.draw(g);
        }
    }
}
